{
  "name": "Finn Audio",
  "description": "Play/Pause audio in the Chrome Browser",
  "version": "2.0",

  "permissions": [
    "activeTab",
    "tabs",
    "http://pandora.com/*",
    "https://pandora.com/*",
    "background",
     "http://*/*", 
     "https://*/*",
     "*://*/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icons/audioicon38.png",
    "default_title": "Finn Audio",
    "default_popup": "popup.html"
  },

  "commands": {
    "Play/Pause": {
        "suggested_key": {
        "default": "MediaPlayPause",
        "mac": "MediaPlayPause"
      },
    "description": "Play/Pause Audio",
    "global": true
    }
  },

  

  "manifest_version": 2
}